@model SignUp;
<div>
    <h3>SignUp Page </h3>
    <hr />
</div>
<div class="shadow-none" style="width: 100%; margin-left: 5px; margin-right:50px; margin-top:20px;margin-bottom:20px; text-align:left;background-color:ghostwhite">
    <form method="post" asp-action="Index" asp-controller="Signup">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label"><b>First Name</b></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" style="color:red;"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label"><b>Last Name</b></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" style="color:red;"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EmailID" class="form-label"><b>Email address</b></label>
            <input asp-for="EmailID" class="form-control">
            <span asp-validation-for="EmailID" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"><b>Password</b></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" style="color:red; "></span>
        </div>
        <input type="submit" value="SignUp" class="btn btn-primary" />
    </form>
</div>